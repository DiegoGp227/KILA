# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# Copia los archivos de dependencias
COPY package*.json ./

# Instala todas las dependencias (incluyendo devDependencies)
RUN npm ci

# Copia el c贸digo fuente
COPY . .

# Compila TypeScript a JavaScript
RUN npm run build

# Stage 2: Production
FROM node:20-alpine

WORKDIR /app

# Copia los archivos de dependencias
COPY package*.json ./

# Instala solo dependencias de producci贸n
RUN npm ci --only=production

# Copia los archivos compilados desde el stage de build
COPY --from=builder /app/dist ./dist

# Copia el archivo SQL si es necesario para inicializaci贸n
COPY db/db.sql ./db/db.sql

# Expone el puerto
EXPOSE 4001

# Usuario no-root para seguridad
USER node

# Comando para iniciar el backend en producci贸n
CMD ["node", "dist/src/index.js"]
